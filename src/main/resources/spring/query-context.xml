<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="getAllMoviesSQL" class="java.lang.String">
        <constructor-arg value="SELECT m.* FROM movie m "/>
    </bean>

    <bean id="getMovieByIdSQL" class="java.lang.String">
        <constructor-arg value="SELECT * FROM movie WHERE id = ?"/>
    </bean>

    <bean id="getAllReviewForMovieSQL" class="java.lang.String">
        <constructor-arg value="SELECT * FROM review WHERE movieid = ?"/>
    </bean>

    <bean id="getLimitedReviewForMovieSQL" class="java.lang.String">
        <constructor-arg value="SELECT * FROM review WHERE movieid = ? LIMIT ?"/>
    </bean>

    <bean id="getAllGenresForMovieSQL" class="java.lang.String">
        <constructor-arg value="SELECT g.* FROM genre g JOIN movie_genre mg ON g.id = mg.genreid WHERE mg.movieid = ?"/>
    </bean>

    <bean id="getAllMovieGenresForMovieSQL" class="java.lang.String">
        <constructor-arg value="SELECT mg.* FROM movie_genre mg WHERE mg.movieid = ?"/>
    </bean>

    <bean id="getAllGenresForCache" class="java.lang.String">
        <constructor-arg value="SELECT g.* FROM genre g"/>
    </bean>

    <bean id="getAllCountriesForMovieSQL" class="java.lang.String">
        <constructor-arg value="SELECT c.* FROM country c JOIN movie_country mc ON c.id = mc.countryid WHERE mc.movieid = ?"/>
    </bean>

    <bean id="getGenreByIdSQL" class="java.lang.String">
        <constructor-arg value="SELECT g.* FROM genre g WHERE g.id = ?"/>
    </bean>

    <bean id="getUserByCredentialsSQL" class="java.lang.String">
        <constructor-arg value="SELECT u.* FROM users u WHERE u.email = ? AND u.password = ?"/>
    </bean>

    <bean id="getUserByIdSQL" class="java.lang.String">
        <constructor-arg value="SELECT u.* FROM users u WHERE u.id = ?"/>
    </bean>

    <bean id="insertReviewSQL" class="java.lang.String">
        <constructor-arg value="INSERT INTO review (movieid, userid, review) VALUES (?,?,?)"/>
    </bean>

    <bean id="deleteReviewByIDSQL" class="java.lang.String">
        <constructor-arg value="DELETE FROM review WHERE id = ?"/>
    </bean>

</beans>